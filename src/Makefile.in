SHELL = /bin/sh
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

.SUFFIXES:
.SUFFIXES: .c .o

OPT=-g -O

AR = ar
AR_FLAGS = rc
RANLIB = @RANLIB@

CC = @CC@
CFLAGS = -I. @CFLAGS@ `sdl-config --cflags`
LDFLAGS = @LDFLAGS@ `sdl-config --libs`
LIBS = @LIBS@
INSTALL = install
prefix = @prefix@
exec_prefix = @exec_prefix@
basedir = $(prefix)/starone
bindir = $(basedir)/bin

SOURCES= \
asteroid.c \
beam.c \
collisions.c \
color.c \
explosion.c \
gameplay.c \
list.c \
main.c \
panic.c \
particle.c \
pulse.c \
ship.c \
texture.c \
util.c

OBJS= \
asteroid.o \
beam.o \
collisions.o \
color.o \
explosion.o \
gameplay.o \
list.o \
main.o \
panic.o \
particle.o \
pulse.o \
ship.o \
texture.o \
util.o

all: starone

install: all
	mkdir $(basedir)
	mkdir $(basedir)/res
	$(INSTALL) starone $(basedir)
	cp -r res/* $(basedir)/res


uninstall:
	/bin/rm -rf $(basedir)

starone: $(OBJS)
	$(CC) $(CFLAGS) -o starone $(OBJS) $(LIBS)

clean:
	/bin/rm -f core *.o $(OBJS)

distclean: clean
	/bin/rm -f Makefile config.h config.status config.cache config.log

mostlyclean: clean

maintainer-clean: clean

